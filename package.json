  "license": "MIT",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "npm-run-all": "^3.1.1",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.8.0",
    "postcss-import": "^8.2.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-watch": "^2.5.0",
    "watch": "^1.0.1",
    "browser-sync": "^2.18.2",
    "rollup": "^0.36.3"
  }
}
