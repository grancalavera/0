{
  "name": "@grancalavera/zero",
  "version": "0.0.0",
  "description": "Before the first one",
  "main": "dist/main.js",
  "scripts": {
    "build:js": "rollup -c rollup.config.js",
    "build:html": "cp src/index.html dist/",
    "build:css": "postcss -c postcss.config.json",
    "dev:js": "npm run build:js -- -w",
    "dev:css": "npm run build:css -- -w",
    "dev:html": "watch 'npm run build:html' src/ --filter=html-watch-filter.js",
    "dev:server": "browser-sync start -s dist -f dist/*",
    "test": "npm test",
    "start": "npm-run-all --parallel dev:*"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "npm-run-all": "^3.1.1",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.8.0",
    "postcss-import": "^8.2.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-watch": "^2.5.0",
    "watch": "^1.0.1",
    "browser-sync": "^2.18.2",
    "rollup": "^0.36.3"
  }
}
